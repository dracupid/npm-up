coffee = require 'coffee-script'
fs = require 'nofs'

compile = (src, dist)->
	fs.readFile src, 'utf8'
	.then (str)->
        coffee.compile str, bare: true
	.then (js)->
		fs.writeFile dist, js, 'utf8'
	.then ->
		console.log 'done: ' + src


task 'build', 'Build', ->
	compile 'libs/cli.coffee', 'dist/cli.js'
	compile 'libs/npm-up.coffee', 'dist/npm-up.js'
